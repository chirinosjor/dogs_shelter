<!DOCTYPE html>
<html>
  <head>
    <title>Refugio de perros</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "sb-admin-2.min"%>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body id="page-top">
    <div id="wrapper">
      <!-- Sidebar -->
      <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        <!-- Sidebar - Brand -->
        <%= link_to root_path, :class=> "sidebar-brand d-flex align-items-center justify-content-center" do %>
            <div class="sidebar-brand-icon rotate-n-15">
              <i class="fas fa-paw"></i>
            </div>
            <div class="sidebar-brand-text mx-3">Refugio de perros</div>
        <% end %>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">
        <% if staff_signed_in? %>
          <%= link_to "Cerrar sesión", destroy_staff_session_path, method: :delete, :class => "btn btn-danger"  %>       

          <!-- Divider -->
          <hr class="sidebar-divider my-0">

          <!-- Nav Item - Dashboard -->
          <li class="nav-item active">
            <%= link_to root_path, :class=> "nav-link" do %>
              <i class="fas fa-home"></i>
              <span>Inicio</span></a>
            <% end %>
          </li>

          <!-- Divider -->
          <hr class="sidebar-divider">

          <!-- Heading -->
          <div class="sidebar-heading">
            Refugios
          </div>
          <!-- Nav Item - Shelters -->
          <li class="nav-item">
            <%= link_to shelters_path, :class=> "nav-link" do %>
              <i class="fas fa-warehouse"></i>
              <span>Ver Refugios</span>
            <% end %>
          </li>

          <!-- Divider -->
          <hr class="sidebar-divider">

          <!-- Heading -->
          <div class="sidebar-heading">
            Perros
          </div>

          <!-- Dogs -->
          <li class="nav-item">
            <%= link_to dogs_path, :class=> "nav-link" do %>
              <i class="fas fa-dog"></i>
              <span>Ver Perros</span>
          </li>
        <% end %>
      

        <!-- Divider -->
        <hr class="sidebar-divider">

      <% else %>
        <p class="text-white text-center mt-5"> ¿Eres parte del staff? <br> Inicia sesión. <br></p>
        <%= link_to "Iniciar sesión", new_staff_session_path, :class => "btn btn-info" %>  
      <% end %>

      </ul>
      <!-- End of Sidebar -->
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <!-- Topbar -->
          <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">
              <div class="topbar-divider d-none d-sm-block"></div>

              <!-- Nav Item - User Information -->
              <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <span class="mr-2 d-none d-lg-inline text-gray-600 small"> 
                  <% if staff_signed_in? %>
                    <%= current_staff.name %></span>
                  <% end %>
                  <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
                </a>
              </li>

            </ul>

          </nav>
          <!-- End of Topbar -->
          <div class="container-fluid">
              <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>