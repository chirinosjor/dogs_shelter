      <%= f.label I18n.t(:email) %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label I18n.t(:phone_number) %><br />
      <%= f.number_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label I18n.t(:body) %><br />
      <%= f.text_area :body %>
    </div>
